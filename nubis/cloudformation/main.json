{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cloudformation template for nubis-ola deployment",
  "Parameters": {
    "ServiceName": {
      "Description": "Name of the service",
      "Type": "String"
    },
    "Environment": {
      "Description": "Environment we are deploying into",
      "Default": "sandbox",
      "Type": "String",
      "AllowedValues": [
        "prod",
        "stage",
        "sandbox"
      ],
      "ConstraintDescription": "Must specify prod, stage, or sandbox."
    },
    "BaseZone": {
      "Description": "Base zone to create route53 zone in",
      "Default": "nubis.allizom.org",
      "Type": "String"
    },
    "SSHKeyName": {
      "Description": "Existing ssh key to deploy to EC2 instances",
      "Type": "String"
    },
    "TechnicalOwner": {
      "Description": "A valid LDAP email",
      "Type": "String"
    },
    "AmiId": {
      "Description": "The id of the ami for this region",
      "Type": "String"
    },
    "StacksVersion": {
      "Description": "Version of the nubis stack",
      "Type": "String",
      "Default": "v1.0.0"
    },
    "OktaURL": {
      "Description": "The okta url for your org",
      "Type": "String"
    },
    "LDAPHostname": {
      "Description": "Hostname of your LDAP server",
      "Type": "String"
    },
    "LDAPBindUser": {
      "Description": "Bind user",
      "Type": "String"
    },
    "LDAPBindPassword": {
      "Description": "LDAP Bind password",
      "Type": "String"
    },
    "LDAPBaseDN": {
      "Description": "Base bind DN",
      "Type": "String"
    },
    "ConsulToken": {
      "Description": "Consul ACL token",
      "Type": "String"
    }
  },
  "Mappings": {
    "InstanceTypeMap": {
      "prod": {
        "InstanceType": "t2.small"
      },
      "stage": {
        "InstanceType": "t2.small"
      },
      "sandbox": {
        "InstanceType": "t2.micro"
      }
    }
  },
  "Resources": {
    "EC2Stack": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "TemplateURL": { "Fn::Join": [ "/", [ "https://s3.amazonaws.com/nubisproject-stacks", { "Ref": "StacksVersion" }, "ec2.template" ] ] },
        "TimeoutInMinutes": "60",
        "Parameters": {
          "StackName": {
            "Ref": "AWS::StackName"
          },
          "ServiceName": {
            "Ref": "ServiceName"
          },
          "TechnicalOwner": {
            "Ref": "TechnicalOwner"
          },
          "Environment": {
            "Ref": "Environment"
          },
          "AmiId": {
            "Ref": "AmiId"
          },
          "SSHKeyName": {
            "Ref": "SSHKeyName"
          },
          "InstanceType": {
            "Fn::FindInMap": [
              "InstanceTypeMap",
              {
                "Ref": "Environment"
              },
              "InstanceType"
            ]
          },
          "ConsulToken": {
            "Ref": "ConsulToken"
          }
        }
      }
    }
  },
  "Outputs": {
    "OktaURL": {
      "Description": "Consul: / Okta URL",
      "Value": {
        "Ref": "OktaURL"
      }
    },
    "LDAPHostname": {
      "Description": "Consul: / LDAP Hostname",
      "Value": {
        "Ref": "LDAPHostname"
      }
    },
    "LDAPBindUser": {
      "Description": "Consul: / LDAP Bind User",
      "Value": {
        "Ref": "LDAPBindUser"
      }
    },
    "LDAPBindPassword": {
      "Description": "Consul: / LDAP Bind Password",
      "Value": {
        "Ref": "LDAPBindUser"
      }
    },
    "LDAPBaseDN": {
      "Description": "Consul: / LDAP Base DN",
      "Value": {
        "Ref": "LDAPBaseDN"
      }
    }
  }
}
